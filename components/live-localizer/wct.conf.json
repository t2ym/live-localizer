        "**/live-localizer-locale-icon-view.html",
        "**/live-localizer-locale-icon.html",
        "**/live-localizer-main.html",
        "**/live-localizer-model.html",
        "**/live-localizer-panel.html",
        "**/live-localizer-storage-icon.html",
